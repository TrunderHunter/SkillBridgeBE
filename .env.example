# Server Configuration
NODE_ENV=
PORT=

# Database Configuration
MONGODB_URI=

# JWT Configuration  
JWT_SECRET=
JWT_EXPIRE=

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Gemini AI Configuration (for smart recommendations)
GEMINI_API_KEY=

# Email Configuration (SMTP) - Cấu hình chính
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
SMTP_PASS=

# Email Configuration cũ (deprecated) - giữ để tương thích
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=
RATE_LIMIT_MAX_REQUESTS=

# VNPay Payment Gateway Configuration
VNPAY_TMN_CODE=
VNPAY_HASH_SECRET=
VNPAY_URL=https://sandbox.vnpayment.vn
VNPAY_TEST_MODE=true

# Base URL (Backend) - Dùng để tạo return URL
# Khi deploy: thay đổi thành domain thật (vd: https://api.skillbridge.com)
BASE_URL=http://localhost:3000

# Frontend URL (for redirect after payment)
FRONTEND_URL=http://localhost:5173

# Jitsi JaaS Configuration (for online meetings)
# Get these from https://jaas.8x8.vc/
JITSI_BASE_URL=https://8x8.vc
JITSI_TENANT=vpaas-magic-cookie-YOUR_TENANT_ID
JITSI_APP_ID=vpaas-magic-cookie-YOUR_APP_ID
JITSI_APP_SECRET=YOUR_APP_SECRET

# Jitsi Webhook Configuration
# Secret key for verifying webhook signatures (generate random string)
JITSI_WEBHOOK_SECRET=your-random-secret-key-here

# Jitsi Public Mode (optional - for testing without JaaS account)
# Set to 'true' to use public meet.jit.si instead of JaaS
JITSI_PUBLIC_ENABLED=false
JITSI_PUBLIC_BASE_URL=https://meet.jit.si

# Jitsi Recording (JaaS feature)
JITSI_RECORDING_ENABLED=true
